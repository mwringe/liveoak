<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>org.projectodd.restafari</groupId>
        <artifactId>restafari-modules</artifactId>
        <version>1.0.0-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <properties>
        <mongo.version>2.11.3</mongo.version>
    </properties>

    <modelVersion>4.0.0</modelVersion>

    <artifactId>restafari-mongo</artifactId>
    <name>restafari-mongo</name>

    <packaging>jar</packaging>

    <dependencies>
        <dependency>
            <groupId>org.projectodd.restafari</groupId>
            <artifactId>restafari-spi</artifactId>
        </dependency>
        <dependency>
            <groupId>org.mongodb</groupId>
            <artifactId>mongo-java-driver</artifactId>
            <version>${mongo.version}</version>
        </dependency>
        <dependency>
            <groupId>org.projectodd.restafari</groupId>
            <artifactId>restafari-container</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.httpcomponents</groupId>
            <artifactId>httpclient</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
          <groupId>com.github.joelittlejohn.embedmongo</groupId>
          <artifactId>embedmongo-maven-plugin</artifactId>
          <version>0.1.9</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <executions>
                    <execution>
                        <id>assemble-module</id>
                    </execution>
                </executions>
            </plugin>
            <plugin>
              <groupId>org.apache.maven.plugins</groupId>
              <artifactId>maven-surefire-plugin</artifactId>
              <executions>
                <execution>
                   <id>test</id>
                   <phase>integration-test</phase>
                   <goals><goal>test</goal></goals>
                   <configuration>
                     <systemPropertyVariables>
                       <mongo.db>${mongo.db}</mongo.db>
                       <mongo.port>${mongo.port}</mongo.port>
                       <mongo.host>${mongo.host}</mongo.host>
                     </systemPropertyVariables>
                   </configuration>
                </execution>
                <execution>
                  <id>default-test</id>
                  <configuration>
                    <skip>true</skip>
                  </configuration>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </build>
          <profiles>
            <profile>
            <id>embeddedMongo</id>
            <activation>
              <property><name>!mongo.db</name></property>
            </activation>
            <properties>
              <mongo.db>test</mongo.db>
              <mongo.port>27018</mongo.port>
              <mongo.host>localhost</mongo.host>
            </properties>
            <build>
            <plugins>
            <plugin>
              <groupId>com.github.joelittlejohn.embedmongo</groupId>
              <artifactId>embedmongo-maven-plugin</artifactId>
              <executions>
                <execution>
                  <id>start-mongodb</id>
                  <phase>pre-integration-test</phase>
                  <goals><goal>start</goal></goals>
                  <configuration>
                    <port>${mongo.port}</port>
                    <logging>file</logging>
                    <logFile>${project.build.directory}/mongodb.log</logFile>
                  </configuration>
                </execution>
                <execution>
                  <id>stop-mongodb</id>
                  <phase>post-integration-test</phase>
                  <goals>
                    <goal>stop</goal>
                  </goals>
                </execution>
              </executions>
            </plugin>
          </plugins>
        </build>
        </profile>
        </profiles>
    

</project>

